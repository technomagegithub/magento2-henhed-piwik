<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <piwik>
            <tracking>
                <enabled>0</enabled>
                <hostname></hostname>
                <secure_hostname></secure_hostname>
                <site_id>1</site_id>
                <link_enabled>1</link_enabled>
                <link_delay>500</link_delay>
            </tracking>
            <reporting>
                <auth_token></auth_token>
                <use_secure>0</use_secure>
                <period>week</period>
                <date>yesterday</date>
            </reporting>
        </piwik>
    </default>
</config>
